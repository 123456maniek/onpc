<com.mkulesh.onpc.config.CheckableItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/checkable_icon"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/draggable_cover_size"
        android:layout_height="@dimen/draggable_cover_size"
        android:layout_marginRight="@dimen/abc_button_padding_horizontal_material"
        android:layout_marginLeft="@dimen/abc_select_dialog_padding_start_material"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

    <TextView
        style="@style/PrimaryTextViewStyle"
        android:id="@+id/checkable_text"
        android:maxLines="2"
        android:textSize="@dimen/draggable_text_size"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_width="0px"
        android:layout_height="@dimen/draggable_row_height"
        android:layout_weight="1" />

    <CheckedTextView
        android:id="@+id/checkable_checkbox"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_width="@dimen/draggable_row_height" />

    <ImageView
        android:id="@+id/checkable_dragger"
        android:src="@drawable/draggable_dots"
        android:scaleType="center"
        android:layout_width="@dimen/draggable_row_height"
        android:layout_height="@dimen/draggable_row_height" />
</com.mkulesh.onpc.config.CheckableItemView>
