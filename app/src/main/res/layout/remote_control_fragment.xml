<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mkulesh.onpc.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/remote_control_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Common line -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Menu -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SecondaryTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cmd_description_menu" />

                    <android.support.v7.widget.AppCompatImageButton
                        style="@style/ImageButtonPrimaryStyle"
                        android:tag="NTC:MENU" />
                </LinearLayout>

                <!-- Settings -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SecondaryTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cmd_description_setup" />

                    <android.support.v7.widget.AppCompatImageButton
                        style="@style/ImageButtonPrimaryStyle"
                        android:tag="NTC:SETUP" />
                </LinearLayout>

                <!-- Return -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SecondaryTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cmd_description_return" />

                    <android.support.v7.widget.AppCompatImageButton
                        style="@style/ImageButtonPrimaryStyle"
                        android:tag="NTC:RETURN" />
                </LinearLayout>
            </LinearLayout>

            <!-- Cursor block -->
            <View style="@style/HorizontalDividerStyle" />

            <!-- Up -->
            <android.support.v7.widget.AppCompatImageButton
                style="@style/ImageButtonPrimaryStyle"
                android:tag="NTC:UP" />

            <!-- Left, Select, Right -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:tag="NTC:LEFT" />

                <android.support.v7.widget.AppCompatImageButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:tag="NTC:SELECT" />

                <android.support.v7.widget.AppCompatImageButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:tag="NTC:RIGHT" />
            </LinearLayout>

            <!-- Down -->
            <android.support.v7.widget.AppCompatImageButton
                style="@style/ImageButtonPrimaryStyle"
                android:tag="NTC:DOWN" />

            <!-- Three lines: numbers -->
            <View style="@style/HorizontalDividerStyle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_1"
                    android:tag="NTC:1" />

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_2"
                    android:tag="NTC:2" />

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_3"
                    android:tag="NTC:3" />

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_4"
                    android:tag="NTC:4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_5"
                    android:tag="NTC:5" />

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_6"
                    android:tag="NTC:6" />

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_7"
                    android:tag="NTC:7" />

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_8"
                    android:tag="NTC:8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <android.support.v7.widget.AppCompatImageButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:tag="NTC:DELETE" />

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_9"
                    android:tag="NTC:9" />

                <android.support.v7.widget.AppCompatButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:text="@string/cmd_description_key_0"
                    android:tag="NTC:0" />

                <android.support.v7.widget.AppCompatImageButton
                    style="@style/ImageButtonPrimaryStyle"
                    android:tag="NTC:CAPS" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>