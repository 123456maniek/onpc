<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="?dialogPreferredPadding">

    <TextView
        style="@style/SecondaryTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/master_volume" />

    <LinearLayout
        android:id="@+id/volume_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryTextViewStyle"
            android:id="@+id/volume_min_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashed_string" />

        <androidx.appcompat.widget.AppCompatSeekBar
            style="@style/SegBarStyle"
            android:id="@+id/volume_progress_bar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:min="0" />

        <TextView
            style="@style/SecondaryTextViewStyle"
            android:id="@+id/volume_max_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashed_string" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tone_bass_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SecondaryTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tone_bass"
            android:paddingTop="?dialogPreferredPadding" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SecondaryTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tone_min" />

            <androidx.appcompat.widget.AppCompatSeekBar
                style="@style/SegBarStyle"
                android:id="@+id/tone_bass_progress_bar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:min="0" />

            <TextView
                style="@style/SecondaryTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tone_max" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tone_treble_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SecondaryTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tone_treble"
            android:paddingTop="?dialogPreferredPadding" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SecondaryTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tone_min" />

            <androidx.appcompat.widget.AppCompatSeekBar
                style="@style/SegBarStyle"
                android:id="@+id/tone_treble_progress_bar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:min="0" />

            <TextView
                style="@style/SecondaryTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tone_max" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>